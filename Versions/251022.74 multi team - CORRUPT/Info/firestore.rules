rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========== COACHES COLLECTIE ==========
    match /coaches/{userId} {
      allow read: if request.auth.uid == userId;
      allow write: if request.auth.uid == userId;
    }
    
    // ========== TEAMS COLLECTIE ==========
    match /teams/{teamId} {
      // Alleen coaches van dit team kunnen het zien
      allow read: if request.auth.uid in resource.data.coaches;
      allow write: if request.auth.uid in resource.data.coaches;
      
      // Subcollecties binnen team
      match /spelers/{spelerId} {
        allow read, write: if request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.coaches;
      }
      
      match /wedstrijden/{wedstrijdId} {
        allow read, write: if request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.coaches;
      }
      
      match /statistieken/{statistiekId} {
        allow read: if request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.coaches;
      }
    }
    
    // ========== INVITES COLLECTIE ==========
    match /invites/{inviteId} {
      allow read: if request.auth.token.email == resource.data.email || 
                     request.auth.uid == resource.data.invitedBy;
      allow write: if request.auth != null;
    }
    
  }
}
